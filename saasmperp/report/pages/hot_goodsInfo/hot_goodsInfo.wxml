<!--report/pages/hot_goodsInfo/hot_goodsInfo.wxml-->
<view class="container">
  <view wx:if="{{index == 0}}" class="header">本月销售额</view>
  <view wx:if="{{index == 1}}" class="header">上月销售额</view>
  <view class="box">
    <view class="box-line">
      <view class="line-title">销售数量</view>
      <view class="line-content">{{goodsInfo.sale_num}}</view>
    </view>
    <view class="box-line">
      <view class="line-title">销售金额</view>
      <view class="line-content">{{goodsInfo.sale_gross}}</view>
    </view>
    <view class="box-line">
      <view class="line-title">毛利润</view>
      <view class="line-content">{{goodsInfo.gross_profit}}</view>
    </view>
    <view class="box-line">
      <view class="line-title">毛利率</view>
      <view class="line-content">{{goodsInfo.gross_profit_rate}}</view>
    </view>
  </view>
</view>
