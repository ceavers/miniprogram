/* report/pages/amount_inventory/amount_inventory.wxss */
.choose-box{
  width: 520rpx;
  height: 72rpx;
  margin:40rpx auto;
  margin-top:34rpx;
  display: flex;
  border-radius: 16rpx;
}
.icon-return{
  color:#D9D9D9;
  font-size: 36rpx;
  top:2rpx;
  position: relative;
  margin-left: 20rpx;
}
.choose-box>view{
  width: 50%;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  display: flex;
  align-items: center;
  justify-content: center;
  border:1px solid rgba(199,199,204,1);
  background: #fff;
}
.curr{
  border-right: none!important;
  border-radius:16rpx 0px 0px 16rpx;
}
.last{
  border-radius:0px 16rpx 16rpx 0px;
}
.choose-box>.choose{
  background: #ACD1A0;
  color:#fff;
}

.item-box{
  height: 120rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.icon-return{
  color:#D9D9D9;
  font-size: 36rpx;
}
.item-box:nth-child(1){
  margin-top:20rpx;
}
.content{
  width: 640rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  height: 66rpx;
}
.text-box{
  width: 100%;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: space-between;
}
.chart-box{
  display: flex;
  justify-content: flex-end;
}
.out-box{
  background: #F0F0F0;
  height: 8rpx;
  border-radius: 8rpx;
  width: 600rpx;
}
.inner-box{
  background: #F0F0F0;
  height: 8rpx;
  border-radius: 8rpx;
  width: 0;
}
.res-box{
  height: calc(100% - 146rpx - 2px);
}