/* report/pages/personal_performance/personal_performance.wxss */
.container{
  font-size: 28rpx;
  color: #323232;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
}
.header>view{
  width: 260rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  background: #fff;
  border: 1rpx solid #C7C7CC;
  border-radius: 16rpx;
  margin: 35rpx 0 40rpx 0;
}
.header>view:first-child{
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.header>view:last-child{
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-left: 0;
}
.header-hover{
  background: #ACD1A0 !important;
  color: #fff;
}
.box-line{
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  padding: 0 32rpx;
  margin-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.box-line:last-child{
  margin: 0;
}
.box-line>view:first-child{
  width: calc(100% - 75rpx);
}
.box-line>view:last-child{
  width: 75rpx;
  text-align: right;
  color: #D9D9D9;
}
.line-content{
  height: 26rpx;
  line-height: 26rpx;
  padding-top:22rpx; 
  display: flex;
  justify-content:space-between;
}
.scale{
  font-size: 24rpx;
}
.Total{
  height: 8rpx;
  margin-top: 31rpx;
  margin-left: 45rpx;
  background: #F0F0F0;
  position: relative;
}
.line{
  position: absolute;
  top: 0;
  left: 0;
  width: 1rpx;
  height:8rpx;
  /* background:#62AC4B; */
  border-radius:4rpx; 
  /* animation: line 1s 1;
  animation-fill-mode: forwards; */
}