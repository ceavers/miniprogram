/* report/pages/cost_statistics/cost_statistics.wxss */
.choose-box{
  margin:40rpx auto;
  margin-top:34rpx;
  display: flex;
  width: 516rpx;
}
.choose-box>view{
  width:172rpx;
  height: 72rpx;
  background: #fff;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border:1px solid rgba(199,199,204,1);
}
.curr-month{
  border-right: none!important;
  border-radius:16rpx 0px 0px 16rpx;
}
.all-year{
  border-left: none!important;
  border-radius:0px 16rpx 16rpx 0px;
}
.choose-box>.choose{
  background: #ACD1A0;
  color:#fff;
}
.chart-box{
  height: 400rpx;
}
.item-box-m{
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom:1px solid #f6f6f6;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  position: relative;
}
.pr{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.num-box{
  display: flex;
}
.icon-return{
  color:#D9D9D9;
  font-size: 36rpx;
  margin-left: 20rpx;
}
.year-fee{
  height: 88rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  margin-bottom: 20rpx;
}

.item-box{
  height: 120rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.icon-return{
  color:#D9D9D9;
  font-size: 36rpx;
}
.item-box:nth-child(1){
  margin-top:20rpx;
}
.content{
  width: 640rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  height: 66rpx;
}
.text-box{
  width: 100%;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: space-between;
  position: relative;
}
.progress-box{
  display: flex;
  justify-content: flex-end;
}
.out-box{
  background: #F0F0F0;
  height: 8rpx;
  border-radius: 8rpx;
  width: 600rpx;
}
.inner-box{
  background: #F0F0F0;
  height: 8rpx;
  border-radius: 8rpx;
  width: 0;
}