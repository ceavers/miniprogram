/* report/pages/customer_statistics/customer_statistics.wxss */
.container{
  font-size: 28rpx;
  color: #323232;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
}
.header>view{
  width: 172rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  background: #fff;
  border-top: 1rpx solid #C7C7CC;
  border-bottom: 1rpx solid #C7C7CC;
  margin: 36rpx 0 40rpx 0;
}
.header>view:first-child{
  border-left: 1rpx solid #C7C7CC;
  border-right: 1rpx solid #C7C7CC;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}
.header>view:last-child{
  border-left: 1rpx solid #C7C7CC;
  border-right: 1rpx solid #C7C7CC;
  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.header-hover{
  background: #ACD1A0 !important;
  color: #fff;
}
.content{
  height: calc(100% - 238rpx);
  overflow-y: auto;
}
.box-line{
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 1px;
  position: relative;
}
.line-content{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  /* margin: auto; */
  text-align: center;
}
.icon-return{
  width: 44rpx;
  text-align: right;
  color: #D9D9D9;
}

.box .box-line:last-child{
  margin: 0;
}
.bottom{
  margin: 0
}