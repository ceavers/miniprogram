.xiaolei_box{
  width: 480rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background:rgba(255,255,255,1);
  border-radius:16px;
  z-index: 100;
}
.xiaolei_title{
  width: 100%;
  height: 88rpx;
  text-align: center;
  background:rgba(242,242,242,1);
  border-radius:16px 16px 0px 0px;
  line-height: 88rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.remove{
  position: absolute;
  right: 30rpx;
}
.xiaolei_content{
  width: 100%;
  height: auto;
  background:rgba(255,255,255,1);
  border-radius:16px; 
}
.xiaolei_content view{
  text-align: center;
  font-size:28rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:80rpx;
}
.shadow{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: black;
  opacity: 0.4;
  z-index: 90;
  top: 0;
}
