.turnover-box{
  height: 100vh;
  background: #f6f6f6;
}

.turnover-box-search{
  height: 88rpx;
  background: #d9d9d9;
  width: 100%;
  padding: 14rpx 30rpx;
  box-sizing: border-box;

}

.turnover-box-search > view{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
}

.turnover-box-search > view image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 16rpx;
  margin-left: 20rpx;
}

.turnover-box-search > view input{
  font-size: 26rpx;
  width: calc(100% - 100rpx);
  outline: none;
  border: none;
}

.turnover-box-title{
  padding-top: 46rpx;
  text-align: center;
  font-size: 32rpx;
  color: #323232;
  box-sizing: border-box;
  height: 80rpx;
}

.turnover-container > view:nth-child(1){
  padding-top: 35rpx;
  padding-left: 30rpx;
  padding-bottom: 23rpx;
  font-size: 24rpx;
  color: #999;
  height: 80rpx;
  box-sizing: border-box;
}

.turnover-box-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  height: 140rpx;
  padding: 22rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f7f7f7;

}

.turnover-box-item > view:nth-child(1){
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.turnover-box-item > view:nth-child(1) view:nth-child(1){
  font-size: 28rpx;
  color: #323232;
}

.turnover-box-item > view:nth-child(1) view:nth-child(2),.turnover-box-item > view:nth-child(1) view:nth-child(3){
  font-size: 22rpx;
  color: #999;
}

.turnover-box-item > view:nth-child(2){
  font-size: 28rpx;
  
}

.greText{
  color: #62AC4B;
}

.redText{
  color: #FF3B30;
}

.mgBottom{
  margin-bottom: 220rpx;
}