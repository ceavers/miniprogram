.account-detail-box{
  height: 100vh;
  background: #f6f6f6;
}

.account-detail-detail{
  height: 120rpx;
  font-size: 32rpx;
  color: #323232;
  text-align: center;
  line-height: 120rpx;

}

.account-detail-container1 > view,.account-detail-container2 > view{
  background: #fff;
  font-size: 28rpx;
  color: #323232;
  border-bottom: 1px solid #f7f7f7;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 88rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.account-detail-container1,.account-detail-container2{
  margin-bottom: 20rpx;
}

.account-detail-container1 > view view:nth-child(1),
.account-detail-container2 > view view:nth-child(1){
  width: 170rpx;

}

.account-detail-container1 > view view:nth-child(2),
.account-detail-container2 > view view:nth-child(2){
  width: calc(100% - 230rpx);
}

.watch-money{
  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  height: 88rpx;
  line-height: 88rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  color: #323232;
}

.beizhu{
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: auto !important;
}

.watch-money image{
  width: 35rpx;
  height: 35rpx;
}

.icon-box{
  display: flex;
  padding-right: 124rpx;
  padding-left: 124rpx;
  box-sizing: border-box;
  align-items: center;
  margin-top: 100rpx;
  justify-content: space-between;
  font-size: 24rpx;
  color: #323232;
}

.icon-box > view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.icon-box image{
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 40rpx;
}

/* 记账转账弹框 */
.transfer-modal navigator{
  width: 100%;
  height: 100%;
}

.transfer-modal{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 30rpx;
  color: #323232;
  z-index: 9999999;
  background: #fff;
}

.hiddenTra{
  opacity: 0;
  visibility: hidden;
  transform: translateY(100%);
  transition: all .3s;
}

.showTra{
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  transition: all .3s;
}

.transfer-mask{
  position: fixed;
  z-index: 999999;
  background: rgba(0,0,0,.4);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

}

.transfer-modal > view{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}

.transfer-modal > view:nth-child(1){
  border-bottom: 1px solid #323232;
}

.transfer-modal > view:nth-child(3){
  height: 10rpx;
  width: 100%;
  background: rgba(0,0,0,.4);
}