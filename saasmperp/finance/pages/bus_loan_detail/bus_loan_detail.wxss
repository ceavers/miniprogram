.loan-detail-box2{
  height: 100vh;
  background: #f6f6f6;
}

.loan-detail-header{
  font-size: 32rpx;
  height: 120rpx;
  text-align: center;
  color: #323232;
  padding-top: 46rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;

}

.loan-detail-container1 > view,.loan-detail-container2 > view{
  height: 88rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
  border-bottom: 1px solid #f7f7f7;
}

.loan-detail-container1 > view view:nth-child(1),.loan-detail-container2 > view view:nth-child(1){
  width: 170rpx;
}

.loan-detail-container1 > view view:nth-child(2),.loan-detail-container2 > view view:nth-child(2){
  width: calc(100% - 230rpx);
}

.loan-detail-container2{
  margin-top: 20rpx;
  margin-bottom: 99rpx;

}

.rollout{
  color: #FF3B30;
}

.beizhu{
  height: auto !important;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.watch-loan image{
  width: 35rpx;
  height: 35rpx;

}

.watch-loan{
  display: flex;
  padding-right: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  justify-content: space-between !important;
  align-items: center;
  height: 88rpx;
  background: #fff;
  font-size: 28rpx;
  color: #323232;
}

.icon-container{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #323232;
  padding-left: 106rpx;
  padding-right: 106rpx;
  box-sizing: border-box;
}

.icon-container image{
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 40rpx;
}

.icon-container > view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}


/* 修改备注弹框 */
.add-cate-modal{
  position: fixed;
  z-index: 99999999;
  background: #f2f2f2;
  width: 520rpx;
  border-radius: 16rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.add-cate-modal-mask{
  position: fixed;
  background: rgba(0,0,0,0.4);
  z-index: 9999999;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
}

.add-cate-modal-header{
  font-size: 28rpx;
  color: #323232;
  text-align: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  padding-top: 46rpx;
  padding-bottom: 39rpx;
  box-sizing: border-box;
  height: 116rpx;
}

.add-cate-modal > view:nth-child(2){
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 60rpx;
  box-sizing: border-box;

}

.add-cate-modal input{
  width: 100%;
  height: 100%;
  border: none;
  background: #fff;
  outline: none;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.add-cate-modal > view:nth-child(3){
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #62AC4B;
  font-size: 28rpx;
  border-top: 1px solid #ccc;
  margin-top: 58rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.add-cate-modal > view:nth-child(3) view{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
}

.add-cate-modal > view:nth-child(3) view:nth-child(1){
  border-right: 1px solid #ccc;
}