.capital-elow-box{
  height: 100vh;
  background: #f6f6f6;
}

/* 搜索之后的结果 */
.zhanwei2{
  height: 80rpx;
  width: 100%;
  
}

.search-header{
  height: 88rpx;
  background: #D9D9D9;
  font-size: 26rpx;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-header view:nth-child(1){
  background: #62AC4B;
  border-radius: 4rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  height: 60rpx;
  color: #fff;
}

.search-header view:nth-child(2){
  color: #323232;
  
}



.search-box{
  height: 88rpx;
  background: #D9D9D9;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
}

.search-box > view{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.search-box > view image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 18rpx;
}

.search-box > view input{
  border: none;
  outline: none;
  width: calc(100% - 80rpx);
  font-size: 26rpx;
}

.capital-elow-header{
  text-align: center;
  height: 80rpx;
  padding-top: 46rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #323232;
}

.mgBottom{
  margin-bottom: 120rpx;
}

.capital-elow-container > view:nth-child(1){
  height: 81rpx;
  padding-top: 34rpx;
  box-sizing: border-box;
  color: #999;
  padding-left: 30rpx;
  padding-bottom: 23rpx;
  font-size: 24rpx;
  
}

.capital-elow-item {
  background: #fff;
  padding: 14rpx 30rpx 11rpx 30rpx;
  box-sizing: border-box;
  height: 120rpx;
 
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
}

/* .capital-elow-item > view:nth-child(1) view:nth-child(2){
  margin-top: 14rpx;
  margin-bottom: 18rpx;
  
} */

.capital-elow-item > view:nth-child(1){
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.capital-elow-item > view:nth-child(2){
  font-size: 28rpx;
}

.capital-elow-item > view:nth-child(1) view:nth-child(1){
  font-size: 28rpx;
  color: #323232;
}

.capital-elow-item > view:nth-child(1) view:nth-child(2),.capital-elow-item > view:nth-child(1) view:nth-child(3){
  font-size: 22rpx;
  color: #999;
}

.greText{
  color: #62AC4B;
}


.redText{
  color: #FF3B30;
}

