.bus-pay-history-box{
  background: #f6f6f6;
}

.bus-pay-history-header{
  width: 100%;
  height: 88rpx;
  padding-top: 50rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #323232;
}

.bus-pay-history-list > view:nth-child(1){
  height: 76rpx;
  line-height: 76rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #323232;
}

.bus-pay-history-item{
  background: #fff;
  height: 116rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  border-bottom: 1px solid #f7f7f7;
}

.bus-pay-history-item > view:nth-child(1){
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}