.fin_com_list1{
  width:100%;
  height:88rpx;
  background:rgba(255,255,255,1);
  line-height: 88rpx;
  overflow: hidden;
  display: flex;
  margin-top: 2rpx;
  justify-content: space-between;
}
.fin_com_title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
  line-height:138rpx;
  text-align: center;
}
.fin_com_list1_img{
  width: auto;
  height: 100%;
  display: flex;
  overflow: hidden;
}
.fin_com_list1_img image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 42rpx;
  margin-top: 24rpx;
}
.fin_com_list1_wenzi{
  margin-left: 20rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.wx-switch-input{
  width:95rpx !important;
  height:50rpx !important;
}
.wx-switch-input::after{
  width:48rpx !important;
  height:48rpx !important;
}
.wx-switch-input::before{
  width:90rpx !important;
  height:48rpx !important;
}

.fin_com_box switch{
  margin-right: 42rpx;
}
.fin_com_list2{
  margin-top: 20rpx;
}