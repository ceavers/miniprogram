/* 选择类别弹框 */
.category-modal{
  position: fixed;
  z-index: 999999;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
}

.category-modal image{
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;

}

.hiddenCate{
  opacity: 0;
  visibility: hidden;
  transform: translateY(100%);
  transition: all .3s;
}

.showCate{
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  transition: all .3s;
}

.category-modal-mask{
  z-index: 99999;
  background: rgba(0,0,0,.4);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.category-modal-header{
  font-size: 32rpx;
  color: #323232;
  text-align: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  padding-bottom: 50rpx;
  padding-top: 40rpx;
}

.category-modal-content{
  padding: 70rpx 15rpx 30rpx 15rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #d9d9d9;
  border-top: 1px solid #d9d9d9;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;

}

.category-modal-content > view{
  padding-left: 32rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
  height: 60rpx;
  border: 1px solid #999;
  border-radius: 6rpx;
  text-align: center;
  line-height: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #323232;
}

.category-modal-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  height: 116rpx;

}

.category-modal-footer > view:nth-child(1){
  color: #323232;
}

.category-modal-footer > view:nth-child(2){
  color: #62AC4B;
}

