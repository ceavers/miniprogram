/* 操作弹框 */
.operate-modal{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 999999;
  font-size: 28rpx;
}

.hiddenOperate{
  opacity: 0;
  visibility: hidden;
  transform: translateY(100%);
  transition: all .3s;
}

.showOperate{
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  transition: all .3s;
}

.operate-modal-mask{
  position: fixed;
  z-index: 99999;
  background: rgba(0,0,0,.4);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.operate-modal > view:nth-child(1){
  padding-top: 26rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  height: 96rpx;
  color: #323232;
  text-align: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.operate-modal image{
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 37rpx;
}

.operate-modal-content{
  display: flex;
  padding-left: 138rpx;
  padding-right: 138rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #323232;
  width: 100%;
}

.operate-modal-content > view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;

}

.operate-cancel{
  text-align: center;
  background: #f2f2f2;
  color: #666;
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  margin-top: 59rpx;
}

