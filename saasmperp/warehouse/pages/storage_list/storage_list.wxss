/* warehouse/pages/storage_list/storage_list.wxss */
page{
  height: auto;
}
.container{
  overflow-y: visible;
}
.storage-box{
  margin-top:50rpx;
}
.storage-item-box{
  height: 88rpx;
  padding: 0 30rpx;
  background: #fff;
  border-bottom:1px solid #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.item-text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.point{
  color:#FF3B30;
}
.item-content{
  width: 450rpx;
  font-size:28rpx;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: space-between;
}
.storage-item-box .icon-return{
  color:#D9D9D9;
}
.note-box{
  height: 120rpx;
}
.item-content input{
  width: 400rpx;
}
.note-area{
  height: 64rpx;
}
.note-text{
  position: relative;
  top:-20rpx;
}
.pd-20{
  padding: 20rpx 0;
  box-sizing: border-box;
}
.scan-box{
  border-left: 1px solid rgba(153,153,153,1);
}
.choose-icon{
  width: 40rpx;
  height: 40rpx;
}
.pd-20>view{
  box-sizing: border-box;
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scan-icon{
  height: 30rpx;
  width: 30rpx;
}
.icon-text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(153,153,153,1);
  margin-left: 30rpx;
}
.goods-info{
  display: flex;
}
.goods-des{
  margin-left: 30rpx;
}
.goods-img{
  width: 104rpx;
  height: 104rpx;
}
.goods-name{
  font-size:26rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.repertory{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  margin:4rpx 0;
}
.price{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.delete-icon{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right:30rpx;
  top:30rpx;
}
.add-sub-icon{
  width: 40rpx;
  height: 40rpx
}
.goods-prop{
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  justify-content: flex-start;
}
.add-sub-box{
  display: flex;
  width: 220rpx;
  justify-content: space-between;
}
.property-one{
  width: 130rpx;
}
.property-two{
  width: 220rpx;
}
.create-btn{
  width:690rpx;
  height:88rpx;
  background:rgba(98,172,75,1);
  border-radius:8rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 88rpx;
  margin:80rpx auto;
}