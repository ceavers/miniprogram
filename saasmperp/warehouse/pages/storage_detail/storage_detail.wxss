/* warehouse/pages/storage_detail/storage_detail.wxss */
.title{
  text-align: center;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
  margin:50rpx 0 40rpx 0;
}
.storage-item-box{
  height: 88rpx;
  padding: 0 30rpx;
  background: #fff;
  border-bottom:1px solid #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.item-text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.point{
  color:#FF3B30;
}
.item-content{
  width: 450rpx;
  font-size:28rpx;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: space-between;
}
.icon-return{
  color:#D9D9D9;
}
.item-title{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
  padding: 38rpx 30rpx 24rpx 30rpx;
}
.statistics-item-box{
  height: 116rpx;
  border-bottom:1px solid #F6F6F6;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.type{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
  margin-bottom: 14rpx;
}
.pr{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.number{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  margin-right:20rpx;
}
.number-box{
  display: flex;
}