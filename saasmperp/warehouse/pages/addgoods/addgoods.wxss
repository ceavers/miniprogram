/* warehouse/pages/addgoods/addgoods.wxss */
.container{
  background: #F6F6F6;
  color: #323232;
  font-size: 28rpx;
  overflow-y: visible;
}
.hidden{
  overflow-y:hidden; 
}
.container-header{
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
}
.goods-img{
  height:148rpx;
  background:rgba(255,255,255,1);
  text-align: center;
  line-height: 148rpx;
}
.choice-img{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
}
.choice-img>image{
  width: 38rpx;
  height: 32rpx;
  margin-right: 18rpx;
  vertical-align: middle;
}
.choice-img>text{
  vertical-align: middle;
  color: #999;
  font-size: 28rpx;
}
.img-box{
  width: calc(100% - 30rpx);
  height: 110rpx;
  padding: 19rpx 15rpx;
  text-align: left;
  white-space: nowrap;
  /* display: flex; */
  overflow-x: auto;
  overflow-y:hidden; 
}
.img-box>view{
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  margin: 0 15rpx;
  position: relative;
}
.img-box>view>image{
  width: 110rpx;
  height: 110rpx;
}
.add-img{
  display: inline-block;
  width: 106rpx !important;
  height: 106rpx !important;
  text-align: center;
  line-height: 110rpx;
  font-size: 50rpx;
  color: #D9D9D9;
  border: 1px dashed #323232; 
  margin: 0 15rpx;
  vertical-align:top;
}
/* 预览图片modal */
.preview-box{
  position: relative;
  height:100%;
  background-color: #000;
}
.previewImage{
  width: 750rpx;
  height: 923rpx;
  border-radius: 0;
  background-color: #000;
  white-space: nowrap;
  display: flex;
  padding-top: 200rpx;
}
.swiper-img{
  width: 100%;
  height: 723rpx;
}
.del-img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 1062rpx;
  right: 51rpx;
}
.del-box{
  height: 176rpx;
  background-color: #000;
}
.del-Preview{
  width:750rpx;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(255,255,255,1);
  font-size: 30rpx;
  color: #424242;
  border: none;
  border-radius:0; 
  margin-bottom: 10rpx;
}
.cancel{
  width:750rpx;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(255,255,255,1);
  font-size: 30rpx;
  color: #62AC4B;
  border: none;
  border-radius:0;
}


.box{
  margin-top: 40rpx;
}
.box-line{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  background: #fff;
  margin-bottom: 1px;
  display: flex;
}
.box>.box-line:last-child{
  margin: 0;
}
.line-title{
  width: 208rpx;
}
.Star{
  color: red;
}
.line-content{
  display: flex;
  width: calc(100% - 208rpx);
  align-items: center;
  justify-content: space-between;
}
.only-one{
  justify-content: flex-end;
}
.line-content>icon{
  color: #D9D9D9;
}
.textarea{
  height: 120rpx;
}
.textarea>.line-content{
  /* line-height: 10rpx;
  padding: 10rpx 0;
  display: flex; */
}
.line-content>textarea{
  /* height: 100rpx;
  width: 100%; */
  height: calc(100% - 55rpx);
  width: calc(100% - 64rpx);
  padding: 30rpx 0 25rpx 0;
  line-height: 28rpx;
}
.rich-text{
  display: block;
  height: 100rpx;
  width: 100%;
  line-height: 28rpx;
}
.btn{
  margin: 80rpx 0 60rpx 0;
}
.btn>button{
  display: block;
  width:690rpx;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  background:rgba(98,172,75,1);
  border-radius:8px;
  color: #fff;
  font-size: 28rpx;
}
/* 添加图片 弹窗 */
.img-title{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.img-contetn{
  height: 170rpx;
  display: flex;
  justify-content: center;
}
.camera{
  margin-right: 260rpx;
}
.camera>image ,.album>image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 40rpx;
}
.img-btn{
  width:100%;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  background:rgba(242,242,242,1);
  font-size: 28rpx;
  color: #666;
  border: none;
}
/* 类别弹窗 */
.category-colseBtn{
  height: 44rpx;
  padding: 30rpx 30rpx 10rpx 0;
}
.category-colseBtn>image{
  width: 44rpx;
  height: 44rpx;
  float: right;
}
.category-title{
  height: 66rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #D9D9D9;
}
.category-title>text{
  margin-left: 20rpx;
}
.category-content{
  max-height: 316rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #D9D9D9;
  padding: 0 25rpx;
  padding-bottom: 46rpx;
  overflow-y:auto; 
}
.category{
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  border: 1px solid #999999;
  border-radius: 6rpx;
  margin-top: 46rpx;
  margin-right: 75rpx;
}
.category-hover{
  border: 1px solid #62AC4B;
}
.category:nth-child(3n){
  margin-right: 0;
}
.category-modify{
  height: 56rpx;
  padding: 30rpx 51rpx;
  display: flex;
  justify-content: space-between;
}
.categoryInfo{
  width: 500rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
}
.colse-categoryInfo{
  position: absolute;
  top: 15rpx;
  right: 26rpx;
  width: 35rpx;
  height: 35rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 55rpx;
  transform:rotate(45deg);
}
.categoryInfo-hover{
  background-color: #F6F6F6;
  border-radius:10rpx;
}
.addcategory-box{
  width: 540rpx;
  height: 300rpx;
  border-radius: 12rpx;
}
.addcategory-title{
  height: 30rpx;
  padding: 30rpx 0 40rpx 0; 
}
.addcategory-input>input{
  display: inline-block;
  text-align: left;
  padding: 0 15rpx;
  margin: 0 auto;
  width: 420rpx;
  height: 60rpx;
  background: #fff;
  box-shadow:0rpx 4rpx 12rpx 0px rgba(0, 0, 0, 0.1);
}
.addcategory-btn{
  margin-top: 47rpx;
  border-top: 1px solid #D9D9D9;
}
.addcategory-btn>view{
  display: inline-block;
  width: 268rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-right: 2rpx solid #D9D9D9;
  border-bottom-left-radius: 10rpx;
}
.addcategory-btn>button:last-child{
  border:none;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 10rpx;
}
/* 颜色弹窗 */
.color-colseBtn{
  height: 44rpx;
  padding: 30rpx 30rpx 10rpx 0;
}
.color-colseBtn>image{
  width: 44rpx;
  height: 44rpx;
  float: right;
}
.color-title{
  height: 66rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #D9D9D9;
}
.color-title>text{
  margin-left: 20rpx;
}
.color-title>text:last-child{
  float: right;
  margin-right: 21rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.color-content{
  max-height: 316rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #D9D9D9;
  /* padding: 0 25rpx; */
  padding-bottom: 46rpx;
  overflow-y:auto;
}
.color{
  display: inline-block;
  min-width: 50rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  border: 1px solid #999999;
  border-radius: 6rpx;
  margin: 46rpx 25rpx 0 25rpx;
  padding: 0 30rpx;
}
.color:nth-child(4n){
  /* margin-right: 0; */
}
.color-hover{
  border-color: #62AC4B;
}
.add-color{
  border: 1px dashed #FF3B30;
  color: #FF3B30;
}
.color-btn{
  height: 56rpx;
  padding: 30rpx 51rpx;
  display: flex;
  justify-content: space-between;
}
.color-btn>view{
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
}
/* 长按删除确认弹窗 */
.dialog-box{
  width: 540rpx;
  height: 300rpx;
}
.box-title{
  padding-top: 36rpx;
}
.box-content{
  padding: 56rpx 51rpx;
  text-align: left;
}
.box-btn{
  font-size: 24rpx;
  padding: 10rpx 51rpx;
  display: flex;
  justify-content: space-between;
}
.box-btn>view:last-child{
  color: #62AC4B;
}
.line-content >input{
  width: calc(100% - 64rpx);
  height: 88rpx;
  line-height: 88rpx;
}