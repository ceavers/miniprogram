/* market/pages/customer/customer.wxss */
.customer{
  height: 100vh;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 88rpx;
  background-color: #C7C7C7;
}
.input-wrap{
  position: relative;
}
.input-wrap image{
  position: absolute;
  top: 50%;
  margin-top: -19rpx;
  left: 19rpx;
  height: 38rpx;
  width: 38rpx;
}
.input-wrap input{
  padding-left: 73rpx;
  width:551rpx;
  height:60rpx;
  background-color: #fff;
  box-shadow:0px 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:12rpx;
  font-size: 26rpx;
} 
.screen{
  height: 40rpx;
  width: 36rpx;
}
.create-customer{
  display: flex;
  align-items: center;
  flex-flow: column;
  padding-top: 114rpx;
  text-align: center;
}
.create-customer-image{
  width: 129rpx;
  height: 175rpx;
}
.create-customer view:nth-child(2){
  margin-top: 49rpx;
  margin-bottom: 28rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1); 
}
.create-customer view:nth-child(3){
  margin-bottom: 100rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(153,153,153,1);
}
.create-customer-btn{
  width:200rpx;
  height:88rpx;
  background:rgba(98,172,75,1);
  border-radius:8rpx;
  color: #fff;
  line-height: 88rpx;
  font-size: 28rpx;
}
.screen-modal{
  display: flex;
  flex-flow: column;
  position: absolute;
  top: -581rpx;
  left: 0;
  width: 100vw;
  height: 581rpx;
  border-radius:0px 0px 16rpx 16rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #323232;
  animation: showmodal .5s 1;
  animation-fill-mode: forwards;
}
@keyframes showmodal{
  form { top: -581rpx; }
  to { top: 0rpx; }
}
.srceen-header{
  padding-left: 50rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: left;
  font-weight: bold;
}
.screen-body{
  flex: 1;
  display: flex;
}
.screen-option view{
  padding-left: 50rpx;
  height: 88rpx;
  width: 290rpx;
  line-height: 88rpx;
  text-align: left;
}
.screen-option-body{
  flex: 1;
  padding-left: 60rpx;
  height: 100%;
  background-color: #F2F2F2;
}
.screen-option-body-option{
  display: flex;
  justify-content: space-between;
  align-items: center; 
  padding-right: 30rpx;
  width: calc(100% - 30rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: left;
}
.screen-option-body-option image{
  width: 24rpx;
  height: 17rpx;
}
.screen-footer{
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  height: 86rpx;
  border-top: 2rpx solid #F2F2F2;
  line-height: 86rpx;
  color: #62AC4B;
}
.select-i{
  background-color: #F2F2F2;
}
.customer-list{
  height: calc(100vh - 88rpx - 88rpx);
  background-color: #F6F6F6;
}
.customer-list-box{
  font-size: 26rpx;
  color: #323232;
}
.customer-list-box:nth-child(1){
  margin-top: 20rpx;
}
.customer-list-title{
  padding-left: 31rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-weight: bold;
}
.customer-list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 2rpx;
  padding: 16rpx 31rpx;
  background-color: #fff;
}
.customer-list-box .customer-list-item:nth-child(2){
  margin-top: 0rpx; 
}
.customer-touxiang{
  height: 84rpx;
  width: 84rpx;
  border-radius: 50%;
}
.customer-mes{
  flex: 1;
  margin-left: 9rpx;
}
.jiantou{
  width: 36rpx;
  height: 36rpx;
}
.footer{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #424242;
}
.footer image{
  margin-right: 20rpx;
  width: 36rpx;
  height: 36rpx;
}
.customer-mes-box{
  position: absolute;
  bottom: -714rpx;
  left: 0;
  height: 714rpx;
  width: 100vw;
  border-radius:16rpx 16rpx 0px 0px;
  background-color: #fff;
  animation: showcustomer .5s 1;
  animation-fill-mode: forwards;
}
@keyframes showcustomer {
  form {
    bottom: -714rpx;
  }
  to {
    bottom: 0rpx;
  }
}
.close-customter-mes{
  padding: 30rpx 30rpx 9rpx 0;
  text-align: right;
}
.close-customter-mes image{
  height: 44rpx;
  width: 44rpx;
}
.customer-mes-wrap{
  display: flex;
}
.customer-mes-wrap image{
  margin-left: 50rpx;
  width: 104rpx;
  height: 100rpx;
  border-radius: 50%;
}
.customer-business-mes{
  display: flex;
  flex-flow: column;
  align-content: space-between;
  padding-left: 20rpx;
  padding-bottom: 44rpx;
  color: #323232;
  font-size: 24rpx;
}
.customer-business-mes view:nth-child(1){
  font-size: 24rpx;
}
.customer-mes-body{
  display: flex;
  flex-flow: column;
  margin: 0 30rpx;
  padding: 46rpx 20rpx 49rpx;
  height: 165rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9; 
  font-size: 24rpx;
  color: #323232;
}
.customer-mes-body-business{
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-flow: column;
  text-align: left;
}
.customer-detail{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-top: 27rpx;
}
.customer-detail image{
  width: 30rpx;
  height: 30rpx;
}
.customer-mes-body-business text{
  margin-left: 20rpx;
}
.customer-footer{
  display: flex;
  justify-content: space-between;
  padding: 46rpx 131rpx;
}
.customer-footer-item{
  display: flex;
  justify-content: space-between;
  flex-flow: column;
  position: relative;
  font-size: 24rpx;
  color: #323232;
}
.customer-footer-item image{
  margin-bottom: 40rpx;
  width: 55rpx;
  height: 55rpx;
}
.share-btn{
  position: absolute;
  z-index: 22;
  height: 100%;
  width: 100%;
  opacity: 0;
}