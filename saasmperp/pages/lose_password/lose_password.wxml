<view class="lose_password_box">
 <import src ="../../components/public_ball/public_ball.wxml"></import>
 <template is="yk_public_ball"></template>
  <view class="phone_box">
    <image src="../../images/phone.png"></image>
    <input class="phone_input"  placeholder="color:rgba(153,153,153,1)" placeholder="请输入手机号" bindinput="phone" type="number" bindblur="tel"></input>
  </view>
  <view class="code_box">
     <view class="code_input_box">
      <image src="../../images/suo.png"></image>
      <input class="code_input" placeholder="color:rgba(153,153,153,1)" placeholder="获取验证码" bindinput="code" bindblur="code1"> </input>
     </view>
     <button class="codeInfo" bindtap="codeInfo" disabled="{{disabled}}">获取验证码</button>
  </view>
  <button class="next_btn" bindtap="next"  disabled="{{disabled1}}">下一步</button>
  <import src ="../../components/public_register/public_register.wxml"></import>
  <template is="yk_public_register"></template>
</view>