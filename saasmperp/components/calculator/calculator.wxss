/* components/calculator/calculator.wxss */
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
  transform:translateY(0);
}
.weui-mask{
  position:fixed;
  z-index:99999;
  top:0;
  right:0;
  left:0;
  bottom:0;
  background: #000;
  opacity: 0.4;
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(100%);
}
.weui-half-screen-dialog{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  z-index:999999;
  background-color:#fff;
}
.show-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100rpx;
}
.input,.result{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center; 
}
.input{
  font-size:28rpx;
  font-weight: 500;
  color: #777;
}
.result{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
}
.button-container{
  background: #333333;
}
.ca-back{
  width: 44rpx;
  height: 30rpx;
}
.ca-box{
  display: flex;
  align-items: center;
}
.ca-button{
  width: 25%;
  box-sizing: border-box;
  height: 104rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  border-right: 1px solid #A6A6A6;
  border-bottom: 1px solid #A6A6A6;
}
.ca-button:nth-child(4){
  border-right: none;
}
.ca-box:nth-child(4) .ca-button{
  border-bottom: none;
}
.ca-button view:nth-child(1){
  border-right: 1px solid #A6A6A6;
}
.ca-button>view{
  width: 50%;
  height: 100%;
  background: #FDD04F;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:50rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.comfirm{
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}