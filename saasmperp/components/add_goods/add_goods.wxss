/* components/add_goods/add_goods.wxss */
@import "/icon/icon.wxss";
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}
.weui-mask{
  position:fixed;
  z-index:1000;
  top:0;
  right:0;
  left:0;
  bottom:0;
  background: #000;
  opacity: 0.2;
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(100%);
}
.weui-half-screen-dialog{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  z-index:9999;
  background-color:#fff;
  border-radius:16rpx 16rpx 0 0;
}
.storage-box{
  max-height: 1030rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.prop-wrapper{
  overflow-y: auto;
  margin-bottom: 58rpx;
  max-height: 838rpx;
}
.goods-popup-info{
  height: 190rpx;
  border-bottom:1px solid rgba(217,217,217,1);
  overflow: hidden;
}
.close-box{
  height: 44rpx;
  display: flex;
  justify-content: flex-end;
}
.goods-img{
  width: 104rpx;
  height: 104rpx;
  margin:0 20rpx;
}
.goods-img-wrap{
  height: 96rpx;
  display: flex;
  align-items: flex-start;
  margin-top:10rpx;
}
.popup-kc{
  display: flex;
  justify-content: space-between;
  width: 540rpx;
  align-items: center;
}
.popup-goods-name{
  font-size:26rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.popup-goods-des{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  margin:4rpx 0;
  width: 540rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.popup-kc{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.detail-close{
  width:44rpx;
  height: 44rpx;
}
.change-price{
  margin-left: 48rpx;
  font-size:22rpx;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.storage-back{
  font-size: 34rpx;
  color:#D9D9D9;
  margin-right: 10rpx;
}
.prop-box{
  border-top: 1px solid rgba(217,217,217,1);
  padding: 44rpx 20rpx;
}
.prop{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.pd{
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  padding:14rpx 22rpx;
  margin:26rpx 42rpx 10rpx 20rpx;
  position: relative;
}
.choose-goods{
  background:rgba(98,172,75,1);
  border-radius:6rpx;
  color:#fff;
}
.choose-num{
  position: absolute;
  padding: 4rpx;
  background:rgba(253,208,79,1);
  min-width:30rpx;
  max-width: 148rpx;
  height:30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius:30rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  top:-15rpx;
  right: -15rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.prop-item-box{
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 0;
}
.prop-title-box,prop-item-box{
  display: flex;
}
.prop-icon{
  width: 40rpx;
  height: 40rpx;
}
.porp-item{
  width:200rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.f-s{
  font-size: 28rpx;
}
.mr-l{
  margin-left: 20rpx;
}
.number{
  width: 120rpx;
  text-align: center;
  margin:0 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bottom-box{
  height: 88rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.bottom-box>view{
  width: 50%;
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.left-bottom-box{
  background: #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.left-bottom-box>view{
  color:rgba(50,50,50,1);
}
.right-bottom-box{
  background: #62AC4B;
  text-align: center;
  line-height: 88rpx;
}
.total-text{
  max-width: 250rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}