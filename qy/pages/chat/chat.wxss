/* pages/chat/chat.wxss */
page{
  background: #F6F6F6;
  height: 100%;
  overflow: hidden;
}
.container{
  height: 100%;
}
.header{
  height: 110rpx;
  margin-top:1px;
  background: #fff;
  padding:15rpx 30rpx;
  box-sizing: border-box;
}
.icon{
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  vertical-align: middle;
}
.title{
  font-size:30rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.action-box{
  width: 200rpx;
  height: 80rpx;
  float: right;
}
.action-item{
  height: 100%;
  width: 44rpx;
  float: right;
  margin-left:44rpx;
}
.action-icon{
  width:46rpx;
  height: 44rpx;
}
.ac-text{
  font-size:22rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.chat-box{
  box-sizing: border-box;
  padding: 30rpx 30rpx 0 30rpx;
  height: calc(100% - 96px);
  position: relative;
}
.chat-back{
  width: 410rpx;
  height: 424rpx;
  position: fixed;
  z-index: -9999;
  top:0;
  bottom: 0;
  left: 0;
  right:0;
  margin: auto;
}
.time{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
}
.value{
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 16rpx;
  font-size:22rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  border-radius: 6rpx;
}
.others{
  margin:25rpx 0;
}
.info{
  display: inline-block;
  width:70rpx;
}
.avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.message-box{
  display: inline-block;
  vertical-align: top;
  margin-left:24rpx;
}
.classify-box{
  position: relative;
  height: 30rpx;
}
.classify{
  font-size:18rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  width: 50rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #7DC66F;
  border-radius: 8rpx;
  position: absolute;
  left:50%;
  margin-left: -24rpx;
  top:-14rpx;
}
.name{
  font-size:24rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  line-height:36rpx;
  padding: 24rpx;
  max-width: 460rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top:18rpx;
  border-radius: 20rpx;
  border-top-left-radius: 0;
  word-break:break-all;
  display: inline-block;
}
.url-text{
  text-decoration: underline;
  color:#2878ff;
}
.self{
  margin:25rpx 0;
  display: flex;
  justify-content: flex-end;
}
.self-info{
  margin-left:24rpx;
}
.self-name{
  text-align: right;
}
.self-text{
  border-radius: 20rpx;
  border-top-right-radius: 0;
  background: #FB9C77;
}
.self-classify{
  background: #FEB62E;
}
.input-box{
  min-height:95px;
  width: 100%;
  box-sizing: border-box;
  border-top:1px solid #D9D9D9;
  position: fixed;
  bottom: 0;
  background: #F6F6F6;
}
.input-margin{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.input-icon{
  width:50rpx;
  height: 50rpx;
  margin-top:24rpx;
  margin-bottom:24rpx; 
  margin-left:20rpx;
  flex-shrink:0;
}
.textarea{
  width: 440rpx;
  overflow:auto;
  margin-top:7px;
  margin-bottom:7px;
  background: #fff;
  border-radius: 8rpx;
  font-size: 14px;
  padding:9px 14rpx; 
  max-height: 35px;
}
.send-message-type{
  height: 260rpx;
  border-top:1px solid #D9D9D9;
  display: flex;
  justify-content:space-around;
  align-items: center;
}
.type-items{
  height: 180rpx;
  width: 116rpx;
}
.icon-box{
  background: #fff;
  height: 116rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}
.type-picture{
  width: 60rpx;
  height: 50rpx;
}
.type-vidicon{
  width: 58rpx;
  height: 42rpx;
}
.type-video{
  width: 66rpx;
  height: 38rpx;
}
.type-voice{
  width: 42rpx;
  height: 56rpx; 
}
.type-text{
  font-size:24rpx;
  font-weight:500;
  color:rgba(82,82,82,1);
  text-align: center;
  margin-top:22rpx;
}
.btn-submit{
  width:100rpx;
  height: 50rpx;
  margin-bottom: 24rpx;
  margin-left: 20rpx;
  background-color:#FB9C77;
  font-size: 21rpx;
  line-height: 50rpx;
  color: white;
  flex-shrink:0;
}
.action{
  padding: 7px 6px;
  background: #FB9C77;
  color:#fff;
  border-radius: 6rpx;
  font-size:14px;
  font-weight:500;
}
.message-type{
  height: 45px;
  display: flex;
  justify-content:space-around;
  align-items: center;
}
.voice-style {
  display: flex;
  position: fixed;
  top: 300rpx;
  left: 50%;
  transform: translateX(50%);
  flex-direction: column;
  align-items: center;
}

.bg-style {
  position: absolute;
  width: 100px;
  height: 100px;
}
.sound-style{
  position: absolute;
  width: 37.6px;
  height: 60px;
  margin-top: 20px;
}
.ico{
   width: 40rpx; 
   height: 44rpx; 
   vertical-align:top;
}
.voice-time{
  font-size: 26rpx;
  margin-left: 10rpx;
}
.voice-time-self{
  font-size: 26rpx;
  margin-right: 10rpx;
}
.ico-self{
  transform: rotate(180deg)
}
.myVideoView{
  width:150rpx;
  height:240rpx;
  border-radius:6rpx;
  background:#000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon-bofang1{
  color:#fff;
  font-size:46rpx;
  position: absolute;
}
.myVideoView-box{
  display: flex;
  justify-content: center;
  align-items: center;
}