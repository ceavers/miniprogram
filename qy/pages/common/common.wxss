/* pages/common/common.wxss */
page{
  background: #f6f6f6;
  height: 100%;
  overflow: hidden;
}
.container{
  height: 100%;
}
.search-box{
  height: 190rpx;
  display: flex;
  align-items: center;
}
.input-box{
  height: 70rpx;
  width: 600rpx;
  background: #fff;
  border-radius: 35rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
}
.search-icon{
  width: 44rpx;
  height: 44rpx;
  margin:0 20rpx 0 30rpx;
}
.search-input{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.cancel{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,96,34,1);
  display: flex;
}
.problem-box{
  width:100%;
  height:calc(100% - 280rpx);
  background:rgba(255,255,255,1);
  border:1px solid rgba(217,217,217,1);
  overflow-y: auto;
}
/* ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */
.del-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.text-box{
  width: 100%;
  height: 88rpx;
  align-items: center;
  border-bottom: 1px #d9d9d9 solid;
  display: flex;
  position: relative;
}
.edit-icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right:33rpx; 
}
.problem-text{
  width: 500rpx;
  margin-left: 29rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.foot{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height:90rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(217,217,217,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.addCommon{
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,96,34,1);
  padding: 10rpx;
}
.foot-icon{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 20rpx;
}
.pup-title{
  text-align: left;
  font-size: 30rpx;
  font-weight:bold; 
  padding:20rpx 20rpx 0 20rpx;
}
.pup-box{
  text-align: left;
  height: 220rpx;
  margin-top: 20rpx;
  padding:0 20rpx 0 20rpx;
}
.addCom-textarea{
  height: 100%;
  font-size:28rpx;
  color:rgba(153,153,153,1);
}
.phcolor{
  font-size: 28rpx;
    color:red;
}
.modal-footer{
  display: flex;
  height: 80rpx;
  border-top: 1px #ccc solid;
  align-items: center;
  font-size: 30rpx;
}
.cancel-btn{
  width: calc(50% - 1rpx);
  height: 100%;
  font-size: 30rpx;
  line-height: 80rpx;
  border-right: 1px #ccc solid;
  color:rgba(102,102,102,1);
  background-color: #fff;
  border-radius:0; 
  padding: 0;
  position: static;
}
.confirm-btn{
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  line-height: 80rpx;
  color:rgba(255,96,34,1);
  background-color: #fff;
  padding: 0;
  position: static;
}