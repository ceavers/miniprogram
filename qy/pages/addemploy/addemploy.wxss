/* pages/addemploy/addemploy.wxss */
.add-employ{
  overflow: hidden;
  height: 100vh;
  background-color: RGBA(246, 246, 246, 1);
  font-size: 28rpx;
}
.add-form{
  overflow: auto;
}
.input-wrap{
  display: flex;
  align-items: center;
  margin-top: 2rpx;
  padding-left: 31rpx;
  /* height: 88rpx; */
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: #fff; 
  
}
.tel-wrap,.password-wrap,.remark{
  margin-top: 20rpx;
}
.input-wrap input {
  padding-left: 33rpx;
}
.input-name{
  display: flex;
}
.green{
  color: rgba(255, 59, 48, 1);
}
.remark{
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  padding-top: 20rpx;
  height: 120rpx;
}
.role{
  margin-left: 30rpx;
  height: 61rpx;
  font-size: 24rpx;
  line-height: 61rpx;
}
.input-radio{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border:1px solid rgba(199,199,204,1);
}
.role-name{
  flex: 1;
  flex-flow: column;
}
.super{
  color: rgba(66, 66, 66, 1);
  font-size: 28rpx;
}
.super-mes{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}
.save-btn{
  margin-left: 30rpx;
  margin-top: 60rpx;
  height: 88rpx;
  width: 690rpx;
  border-radius: 6rpx;
  background-color: rgba(251, 156, 119, 1);
  color: #fff;
  font-weight: 500;
  text-align: center;
  line-height: 88rpx;
}
radio{
  display: block;
  padding-left: 30rpx;
  padding-top: 24rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
}