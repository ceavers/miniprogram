/* pages/chatRecords/chatRecords.wxss */
page{
  background: #F6F6F6;
  height: 100%;
}
.container{
  height: 100%;
}
.search-box{
  width: 100%;
  height: 150rpx;
  display: flex;
  padding: 0 30rpx 0 0;
  align-items: center;
  background: #F6F6F6;
}
.input-box{
  height: 70rpx;
  width:600rpx;
  background: #fff;
  border-radius: 36rpx;
  margin:0 30rpx;
  display: flex;
  align-items: center;
}
.cancel{
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,96,34,1);
}
.search-icon{
  width:44rpx;
  height: 44rpx;
  margin:0 20rpx 0 30rpx;
}
.search-input{
  width:calc(100% - 130rpx);
  font-size:30rpx;
}
.hint{
  padding: 40rpx 0 60rpx 0;
  text-align: center;
  font-size:26rpx;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.result-box{
  display: flex;
  justify-content: space-around;
}
.result-item{
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #f8d9cc;
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,96,34,1);
}
.search-result{
  height:calc(100% - 150rpx);
  overflow-y: auto;
}
.search-result-item{
  height: 120rpx;
  background: #fff;
  margin-top:1px;
  display: flex;
  align-items: center;
}
.avatar{
  width:66rpx;
  height: 66rpx;
  margin:0 16rpx 0 30rpx;
}
.record-box{
  height: 66rpx;
  width:calc(100% - 150rpx);
}
.name-time-box{
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.record{
  height: 44rpx;
  font-size:26rpx;
  line-height: 44rpx;
  font-weight:500;
  color:#323232;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pup-title{
  font-size:30rpx;
  color:rgba(50,50,50,1);
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
}
.closeBtn{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right:20rpx;
  top:20rpx;
}
.members-box{
  padding: 10rpx;
  height: 650rpx;
  overflow-y: auto;
}
.members-item-box{
  display: flex;
  justify-content: flex-start;
  padding: 6rpx 20rpx;
  align-items: center;
}
.member-img{
  width:70rpx;
  height: 70rpx;
  border-radius: 8rpx;
}
.member-name{
  margin-left: 30rpx;
  font-size: 28rpx;
}
.pup-search {
  height: 70rpx;
  display: flex;
  align-items:center;
  border-bottom: 2rpx solid #f5f5f5;
}

.pup-icon-search {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.pup-search-value {
  align-items: center;
  width: 500rpx;
  margin-left: 14rpx;
  font-size: 26rpx;
  border: none;
  text-align: left;
}
.messimgae{
  width:200rpx;
  height: 200rpx;
  background: #fff;
}
.messTime{
  font-size:24rpx;
  padding:20rpx 38rpx;
}
.messBox{
  display: inline-block;
  margin-left: 36rpx;
}