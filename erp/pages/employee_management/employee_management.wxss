/* pages/employee_management/employee_management.wxss */
.manage{
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  height: 100vh;
  background:RGBA(246, 246, 246, 1); 
}
.header{
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 10rpx;
}
.header input{
  padding-left: 21rpx;
  width:669rpx;
  height:70rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:8rpx 4rpx 4rpx 4rpx;
  font-size:26rpx;
  /* font-family:PingFangSC-Medium; */
  /* font-weight:500; */
  /* color:rgba(153,153,153,1); */
  line-height:44rpx;
}
.search-wrap{
  position: relative; 
}
.search-img{
  position: absolute;
  right: 50rpx;
  top: 20rpx;
  width: 36rpx;
  height: 36rpx;
}
.search-img image{
  width: 36rpx;
  height: 36rpx;
}
.search-type{
  display: flex;
  margin-top: 20rpx;
}
.enabled,.deactivated{
  width:345rpx;
  height:70rpx; 
  background-color: #fff;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
}
.enabled{
  border-radius:8rpx 0rpx 0rpx 8rpx;
}
.deactivated{
  border-radius:0rpx 8rpx 8rpx 0rpx;
}
.checked{
  background:#62AC4B;
  color: #fff;
}
.main{
  flex: 1;
  overflow: auto;
  overflow-x: hidden;
}
.message-wrap1,.message-wrap2,.message-wrap3,.message-wrap4{
  margin-top: 2rpx;
  background-color: #fff;
}
.message-wrap1{
  padding-top: 26rpx;
  padding-bottom: 24rpx;
  padding-left: 30rpx;
  background-color: #fff;
}
.name{
  font-size: 30rpx;
  color: rgba(66, 66, 66, 1);
}
.role,.sign-in-date,.set-up-date{
  margin-top: 7rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}
.role view,.sign-in-date view,.set-up-date view{
  display: inline-block;
  /* margin-top: 10rpx; */
  padding-left: 10rpx;
  font-size: 24rpx;
}
.role{
  margin-top: 9rpx;
}
.role view{
  color: rgba(66, 66, 66, 1);
}
.sign-in-date view{
  color: rgba(247, 118, 32, 1);
}
.message-wrap2{
  display: flex;
  background-color: #fff;
}
.message-del{
  flex: 1;
  padding-top: 73rpx;
  padding-bottom: 24rpx;
}
.del-btn{
  width: 100rpx;
  height: 160rpx;
  background-color: rgba(255, 59, 48, 1);
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 160rpx;
}
.message-wrap3{
  padding-left: 30rpx;
  padding-top: 26rpx;
  padding-bottom: 24rpx;
}
.message-wrap4{
  display: flex;
}
.message-edit{
  flex: 1;
  padding-left: 30rpx;
  padding-top: 26rpx;
  padding-bottom: 24rpx;
}
.edit-btn{
  width: 100rpx;
  height: 160rpx;
  
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 160rpx;
}

.footer{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: rgba(66, 66, 66, 1);
}
.add-employ{
  margin-right: 20rpx;
  height: 36rpx;
  width: 36rpx;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 2rpx;
  width: 100%;
  background: #fff;
  overflow: hidden;
}
 
.content {
  flex: 1;
  background-color: #fff;
  transition: all 0.4s;
  transform: translateX(-100rpx); 
}
 
.del {
  background-color: #FF3B30;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight:500;
  font-size: 28rpx;
  color: #fff;
  transform: translateX(100rpx);
  transition: all 0.4s;
}
.edit {
  background-color: rgba(199, 199, 204, 1);
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight:500;
  font-size: 28rpx;
  color: #fff;
  transform: translateX(-100rpx);
  transition: all 0.4s;
}
 .left .content{
  transform: translateX(-130rpx);
  transition: all 0.4s;
 }
 .left .edit{
  transform: translateX(-100rpx);
  transition: all 0.4s;
 }
 .left .del {
  transform: translateX(0rpx);
  transition: all 0.4s;
}
.right .content{
  transform: translateX(0rpx);
  transition: all 0.4s;
 }
 .right .edit{
  transform: translateX(0rpx);
  transition: all 0.4s;
 }
 .right .del {
  transform: translateX(100rpx);
  transition: all 0.4s;
}

