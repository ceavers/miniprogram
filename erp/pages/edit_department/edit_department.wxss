/* pages/add_department/add_department.wxss */
.add-department{
  height: 100vh;
  background: #f6f6f6;
  font-size: 28rpx;
}
.input-wrap{
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 2rpx;
  padding-left: 32rpx;
  height: 88rpx;
  background-color: #fff;
  line-height: 88rpx;
}
.icon-return{
  margin-right: 32rpx;
  line-height: 88rpx;
  color: #D9D9D9;
}
.add-department-input{
  flex: 1;
  margin-left: 10rpx;
}
.save-btn, .del-btn{
  margin-top: 50rpx;
  width:690rpx;
  height:88rpx;
  background:rgba(98,172,75,1);
  border: none;
  border-radius:8rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight:bold;
}
.del-btn{
  margin-top: 20rpx;
  background-color: #C7C7C7;
}
.item-name{
  width: 100rpx;
}