/* 添加类别弹框 */
.add-cate-modal{
  position: fixed;
  z-index: 99999999;
  background: #f2f2f2;
  width: 520rpx;
  border-radius: 16rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.add-cate-modal-mask{
  position: fixed;
  background: rgba(0,0,0,0.4);
  z-index: 9999999;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
}

.add-cate-modal-header{
  font-size: 28rpx;
  color: #323232;
  text-align: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  padding-top: 46rpx;
  padding-bottom: 39rpx;
  box-sizing: border-box;
  height: 116rpx;
}

.add-cate-modal > view:nth-child(2){

  font-size: 28rpx;
  color: #323232;
  padding-left: 30rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.add-cate-modal > view:nth-child(3){
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 60rpx;
  box-sizing: border-box;

}

.add-cate-modal input{
  width: 100%;
  height: 100%;
  border: none;
  background: #fff;
  outline: none;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.add-cate-modal > view:nth-child(4){
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #62AC4B;
  font-size: 28rpx;
  border-top: 1px solid #ccc;
  margin-top: 58rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.add-cate-modal > view:nth-child(4) view{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
}

.add-cate-modal > view:nth-child(4) view:nth-child(1){
  border-right: 1px solid #ccc;
}

