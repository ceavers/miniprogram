/* market/pages/sales_slip/sales_slip.wxss */
.order{
  height: 100vh;
  background-color: #f6f6f6;
  font-size: 28rpx;
  color: #323232;
}
.history{
  padding-right: 31rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: right;
}
.customer-box,.money-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
  height: 88rpx;
  background-color: #fff;
}
.money-wrap{
  margin-top: 40rpx;
}
.customer-name,.money-num{
  flex: 1;
  text-align: center;
}
.customer-box image,.money-wrap image{
  width: 36rpx;
  height: 36rpx;
}
.business-document{
  display: flex;
  align-items: center;
  flex-flow: wrap;
  padding: 10rpx 30rpx 0;
  background-color: #fff;
}
.business-image{
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  height: 110rpx;
  width: 110rpx;
}
.add-image{
  margin-bottom: 10rpx;
  width:110rpx;
  height:110rpx;
  background:rgba(255,255,255,1);
  border:1rpx dotted rgba(102,102,102,1);
  text-align: center;
  line-height: 110rpx;
  font-size: 28rpx;
}
.select-business-document{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  width: 100%;
  height: 130rpx;
  color: #999999;
}
.select-business-document image{
  margin-right: 18rpx;
  width: 38rpx;
  height: 32rpx;
}
.next-btn{
  margin-top: 80rpx;
  margin-left: 30rpx;
  width:690rpx;
  height:88rpx;
  background:rgba(98,172,75,1);
  border-radius:8rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
}
.preview-swiper{
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  padding-top: 100rpx;
  padding-bottom: calc(100vh - 100rpx - 80vh);
  height: 80vh;
  width: 100vw;
  background-color: #000;
}
.slide-image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 100%;
  height: 600rpx;
}
.del-image{
  position: absolute;
  right: 51rpx;
  bottom: calc(100vh - 100rpx - 80vh);
  width: 60rpx;
  height: 60rpx;
  z-index: 9999;
}
.del-modal{
  position: absolute;
  bottom: -186rpx;
  left: 0;
  height: 186rpx;
  width: 100vw;
  background-color: #fff;
  animation: delmodal .5s 1;
  animation-fill-mode: forwards;
}
@keyframes delmodal{
  from { bottom: -186rpx; }
  to { bottom: 0; }
}
.del-image-btn,.del-image-cancel{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}
.del-image-cancel{
  border-top: 10rpx solid #000;
  color: #62AC4B;
}
