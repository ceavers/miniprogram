/* components/calculator/calculator.wxss */
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
  transform:translateY(0);
}
.weui-mask{
  display: flex;
  justify-content: center;
  position:fixed;
  z-index:99999;
  top:0;
  right:0;
  left:0;
  bottom:0;
  padding-top: 150rpx; 
  background: rgba(0, 0, 0, .4);
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(100%);
}
.weui-half-screen-dialog{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  z-index:999999;
  background-color:#fff;
}
.show-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100rpx;
}
.input,.result{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center; 
}
.input{
  font-size:28rpx;
  font-weight: 500;
  color: #777;
}
.result{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
}
.button-container{
  background: #333333;
}
.ca-back{
  width: 44rpx;
  height: 30rpx;
}
.ca-box{
  display: flex;
  align-items: center;
}
.ca-button{
  width: 25%;
  box-sizing: border-box;
  height: 104rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  border-right: 1px solid #A6A6A6;
  border-bottom: 1px solid #A6A6A6;
}
.ca-button:nth-child(4){
  border-right: none;
}
.ca-box:nth-child(4) .ca-button{
  border-bottom: none;
}
.ca-button view:nth-child(1){
  border-right: 1px solid #A6A6A6;
}
.ca-button>view{
  width: 50%;
  height: 100%;
  background: #FDD04F;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:50rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.comfirm{
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.settlement-price{
  position: relative;
  width: 580rpx;
  height: 440rpx;
  border-radius:16rpx 16rpx 0rpx 0rpx;
  background-color: #fff;
}
.goods-images{
  position: absolute;
  top: -100rpx;
  left: 50%;
  margin-left: -140rpx;
  height: 340rpx;
  width: 280rpx;
}
.settlement-price-mes{
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 28rpx;
}
.settlement-price-detail{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 39rpx;
  padding: 0 31rpx;
  color: #323232;
}
.confirm-settlement{
  width:580rpx;
  height:88rpx;
  background:rgba(242,242,242,1);
  text-align: center;
  line-height: 88rpx;
  color: #666;
}
.cancel-image{
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  font-size: 24rpx;
}