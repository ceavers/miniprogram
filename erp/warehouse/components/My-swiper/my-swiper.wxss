.my-swiper{
  width:100%;
  height: 468rpx;
  /* border: 1px solid red; */
  position: relative;
}

.child-base{
  /* transition: all 0.5s; 用js异步设置了，因为同步设置初始化也有动画*/
  border-radius: 8rpx;
  position: absolute;
  overflow: hidden;
}
.child-base image{
  heigth:100%;
  width:100%;
}

.after{
  width:50%;
  height: 200rpx;
  position: absolute;
  top:0;
  left:25%;
  margin-top:2.5%;
  z-index:1;
}

.left{
  width:50%;
  height: 400rpx;
  top:0;margin-top:2.5%;
  left:0;
  z-index:2;
}

.right{
  width:50%;
  height: 400rpx;
  left:50%;
  top:0;margin-top:2.5%;
  z-index:2;
}

.center{
  width:60%;
  height: 457rpx;
  top:0;
  left:20%;
  z-index:3;
  /* box-shadow: 0px 0px 20px rgba(0,0,0,0.5); */
}



/* 焦点指示器 */
.focus-box{
  height: 16rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom:40rpx;
  z-index:4;
}
.focus-box>view{
  display: flex;
}
.focus-box .child{
  height:16rpx;
  width: 16rpx;
  border-radius:6px;
  margin-left:12rpx;
  background:rgba(255,255,255,1);
  transition: all 0.5s;
}

.focus-box .active{
  background: #62AC4B;
}