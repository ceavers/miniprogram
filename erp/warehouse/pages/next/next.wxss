/* warehouse/pages/next/next.wxss */
.storage-box{
  margin-top:30rpx;
}
.storage-item-box{
  height: 88rpx;
  padding: 0 30rpx;
  background: #fff;
  border-bottom:1px solid #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.item-text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.point{
  color:#FF3B30;
}
.item-content{
  width: 450rpx;
  font-size:28rpx;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: space-between;
}
.storage-item-box .icon-return{
  color:#D9D9D9;
}
.note-box{
  height: 120rpx;
}
.item-content input{
  width: 400rpx;
}
.note-area{
  height: 64rpx;
}
.note-text{
  position: relative;
  top:-20rpx;
}
.nowrap{
  overflow: hidden;
}
.pd-20{
  padding: 20rpx 0;
  box-sizing: border-box;
}
.scan-box{
  border-left: 1px solid rgba(153,153,153,1);
}
.choose-icon{
  width: 40rpx;
  height: 40rpx;
}
.pd-20>view{
  box-sizing: border-box;
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scan-icon{
  height: 30rpx;
  width: 30rpx;
}
.icon-text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.photo-box{
  height:148rpx;
  background:rgba(255,255,255,1);
  margin-top:40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon-img{
  width: 38rpx;
  height: 32rpx;
  margin-right: 18rpx;
}
.btn-box{
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom:0;
  display: flex;
  align-items: center;
}
.back-btn,.comfirm-btn{
  width: 50%;
  height: 100%;
  font-size:28rpx;
  font-weight:500;
  line-height: 88rpx;
  text-align: center;
}
.back-btn{
  color:rgba(50,50,50,1);
  background: #C7C7C7;
}
.comfirm-btn{
  color:#fff;
  background: #62AC4B;
}
.img-title{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.img-contetn{
  height: 170rpx;
  display: flex;
  justify-content: center;
}
.camera{
  margin-right: 260rpx;
}
.camera>image ,.album>image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 40rpx;
}
.camera,.album{
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
}
.img-btn{
  width:100%;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  background:rgba(242,242,242,1);
  font-size: 28rpx;
  color: #666;
  border: none;
}

.goods-img{
  margin-top: 40rpx;
  height:148rpx;
  background:rgba(255,255,255,1);
  text-align: center;
  line-height: 148rpx;
}
.choice-img{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
}
.choice-img>image{
  width: 38rpx;
  height: 32rpx;
  margin-right: 18rpx;
  vertical-align: middle;
}
.choice-img>text{
  vertical-align: middle;
  color: #999;
  font-size: 28rpx;
}
.img-box{
  width: calc(100% - 30rpx);
  height: 110rpx;
  padding: 19rpx 15rpx;
  text-align: left;
  white-space: nowrap;
  /* display: flex; */
  overflow-x: auto;
  overflow-y:hidden; 
}
.img-box>view{
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  margin: 0 15rpx;
  position: relative;
}
.img-box>view>image{
  width: 110rpx;
  height: 110rpx;
}
.add-img{
  display: inline-block;
  width: 106rpx !important;
  height: 106rpx !important;
  text-align: center;
  line-height: 110rpx;
  font-size: 50rpx;
  color: #D9D9D9;
  border: 2rpx dashed #323232; 
  margin: 0 15rpx;
  vertical-align:top;
}

/* 预览图片modal */
.preview-box{
  position: relative;
  height:100%;
  background-color: #000;
}
.previewImage{
  width: 750rpx;
  height: 923rpx;
  border-radius: 0;
  background-color: #000;
  white-space: nowrap;
  display: flex;
  padding-top: 200rpx;
}
.swiper-img{
  width: 100%;
  height: 723rpx;
}
.del-img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 1062rpx;
  right: 51rpx;
}
.del-box{
  height: 176rpx;
  background-color: #000;
}
.del-Preview{
  width:750rpx;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(255,255,255,1);
  font-size: 30rpx;
  color: #424242;
  border: none;
  border-radius:0; 
  margin-bottom: 10rpx;
}
.cancel{
  width:750rpx;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(255,255,255,1);
  font-size: 30rpx;
  color: #62AC4B;
  border: none;
  border-radius:0;
}
