/* warehouse/pages/enable_barCode/enable_barCode.wxss */
.container{
  font-size: 28rpx;
  color: #323232;
}
.header{
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(50,50,50,1);
}
.box-line{
  /* height: 88rpx; */
  line-height: 88rpx;
  padding: 0 32rpx;
  background: #fff;
  margin-bottom: 2rpx;
  display: flex;
}
.box-line:last-child{
  margin: 0;
}
.line-title{
  width: 208rpx;
}
.line-content{
  width: calc(100% - 208rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.switch{
  justify-content: flex-end;
}
.wx-switch-input{
  width:90rpx !important; 
  height: 54rpx !important;
}
.wx-switch-input::before{
  width:90rpx !important;
  height: 54rpx !important;
}
.wx-switch-input::after{
  width: 46rpx !important;
  height: 50rpx !important;
}
.box-title{
  height: 76rpx;
  line-height: 76rpx;
  padding-left: 32rpx;
}
.icon-saomiao1{
  color: #323232;
}
.Prohibit{
  margin-top: 40rpx;
}
.btn{
  width:690rpx;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  background:rgba(98,172,75,1);
  border-radius:8rpx;
  margin: 80rpx auto;
  /* margin-top: 80rpx; */
}
.single-line{
  display:block;
  position:relative;
  padding: 0;
  background: #F6F6F6;
}
.single-title{
  position:absolute;
  padding-left: 32rpx;
}
.single-content{
  width: calc(100% - 32rpx);
  margin-bottom: 1px;
  padding-right: 32rpx;
  background: #fff;
}
.single-content:last-child{
  margin: 0;
}
.size-tilte{
  width: 100rpx;
}