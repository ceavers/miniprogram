.revenue-query-detail-box{
  height: 100vh;
  background: #f6f6f6;
}

.transfer-detail-wrapper-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  background: #d9d9d9;
  font-size: 26rpx;
  height: 88rpx;
}

.mgBottom{
  margin-bottom: 220rpx;
}

.zhnwei{
  width: 100%;
  height: 10rpx;
}

.transfer-detail-wrapper-header > view:nth-child(1){
  background: #62AC4B;
  border-radius: 4rpx;
  color: #fff;
  height: 100%;
  width: 340rpx;
  text-align: center;
  line-height: 60rpx;

}


.revenue-query-detail-container > view:nth-child(1){
  height: 81rpx;
  font-size: 24rpx;
  color: #999;
  padding:35rpx 30rpx 23rpx 30rpx;
  box-sizing: border-box;

}

.revenue-query-detail-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  background: #fff;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f7f7f7;

}

.revenue-query-detail-item > view:nth-child(1) view:nth-child(1){
  font-size: 28rpx;
  color: #323232;
}

.revenue-query-detail-item > view:nth-child(1) view:nth-child(2){
  font-size: 22rpx;
  color: #999;
}

.greText{
  font-size: 28rpx;
  color: #62AC4B;
}

.redText{
  color: #FF3B30;
  font-size: 28rpx;

}

.icon-box{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  background: #fff;
  font-size: 28rpx;
  color: #424242;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.icon-box image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.icon-box view{
  margin-left: 10rpx;
}