.loan_detail-box{
  height: 100vh;
  background: #f6f6f6;
}

.zhanwei{
  width: 100%;
  height: 10rpx;
}

.loan_detail-container > view:nth-child(1){
  height: 81rpx;
  padding-top: 35rpx;
  padding-bottom: 23rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.loan_detail-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #f7f7f7f7;

}

.loan_detail-item > view:nth-child(1){
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.loan_detail-item > view:nth-child(1) view:nth-child(1){
  font-size: 28rpx;
  color: #323232;
}

.loan_detail-item > view:nth-child(1) view:nth-child(2){
  color: #999;
  font-size: 22rpx;
}

.greText{
  font-size: 28rpx;
  color: #62AC4B;
}

.redText{
  color: #FF3B30;
  font-size: 28rpx;
}

/* 点击查询跳转过来的样式 */
.transfer-detail-wrapper-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  background: #d9d9d9;
  font-size: 26rpx;
  height: 88rpx;
}

.transfer-detail-wrapper-header > view:nth-child(1){
  background: #62AC4B;
  border-radius: 4rpx;
  color: #fff;
  height: 100%;
  width: 340rpx;
  text-align: center;
  line-height: 60rpx;

}