.loan-query-box{
  height: 100vh;
  background: #f6f6f6;
}

.loan-query-header{
  height: 120rpx;
  text-align: center;
  font-size: 32rpx;
  color: #323232;
  padding-bottom: 40rpx;
  padding-top: 46rpx;
  box-sizing: border-box;
}

.loan-query-container1 > view,.loan-query-container2 > view{
  position: relative;
  height: 88rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f7f7f7;
  color: #323232;
}

.loan-query-container1 > view image,.loan-query-container2 > view image{
  position: absolute;
  right: 30rpx;
  top: 26rpx;
  width: 35rpx;
  height: 35rpx;

}

.loan-query-container1 > view view:nth-child(1),.loan-query-container2 > view view:nth-child(1){
  width: 170rpx;

}

.loan-query-container1 > view view:nth-child(2),.loan-query-container2 > view view:nth-child(2){
  width: calc(100% - 230rpx);
}

.loan-query-container1 input,.loan-query-container2 input{
  outline: none;
  border: none;
  width: calc(100% - 230rpx);
  font-size: 28rpx;
}

.pickerdate {
   width: calc(100% - 230rpx);
}

.pickerdate{
  line-height: 88rpx;
  font-size: 28rpx;
}


.btn-group{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.btn1,.btn2{
  width: calc(100% - 60rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn1{
  margin-top: 80rpx;
  margin-bottom: 50rpx;
  background: #62AC4B;
  color: #fff;
}

.btn2{
  background: #fff;
  color: #424242;
}



/* 未选中的样式  radio 在组件内不生效 */
radio .wx-radio-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%; 
  border: 1px solid #fff;
  background: transparent;
}
radio .wx-radio-input.wx-radio-input-checked{
  border: 1px solid #62AC4B;
  background: #444444;
}
/* 选中后 背景及勾 的样式 */
radio .wx-radio-input.wx-radio-input-checked::before {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;   
  line-height: 32rpx;
  text-align: center;
  font-size: 30rpx;     
  background: #62AC4B;
}