.setting-modify-box{
  background: #f6f6f6;
  height: 100vh;
}

.setting-modify-box > view:nth-child(1){
  height: 88rpx;
  padding-left: 30rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #323232;
  font-weight: bold;
  box-sizing: border-box;
}

.setting-modify-container {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #323232;
}

.first-category,.second-category{
  width: 50%;
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.first-category > view,.second-category > view{
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.second-category{
  padding-right: 30rpx;
  width: 50%;
  box-sizing: border-box;
  background: #fff;

}

.activeFir{
  background: #fff;
}

.setting-footer{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #62AC4B;
  position: fixed;
  bottom: 0;
  left: 0;
}

.setting-footer > view:nth-child(1),.setting-footer > view:nth-child(2){
  width: 50%;
  height: 100%;
  line-height: 88rpx;
  padding-left: 46rpx;
  padding-right: 46rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mask{
  position: fixed;
  z-index: 99999;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  background: #000;
  opacity: .4;
}

.second-cate-modal{
  position: absolute;
  z-index: 999999;
  background: #f2f2f2;
  width: 520rpx;
  /* height: 315rpx; */
  border-radius: 16rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.second-cate-modal-title{
  font-size: 28rpx;
  color: #323232;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 40rpx;

}

.second-cate-modal-content{
  width: 460rpx;
  height: 60rpx;
  font-size: 28rpx;
  margin:0 auto;
  outline: none;
  margin-bottom: 58rpx;
  background: #fff;
}

.second-cate-modal-footer{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #62AC4B;
}

.second-cate-modal-footer > view{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.second-cate-modal-footer > view:nth-child(1){
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  border-bottom-left-radius: 16rpx;
}

.second-cate-modal-footer > view:nth-child(2){
  border-top: 1px solid #ccc;
  border-bottom-right-radius: 16rpx;
}

/* 新增大类 */



.first-cate-modal > image{
  width: 49rpx;
  height: 49rpx;
  position: absolute;
  top: 0;
  transform: translateY(-50%);
  right: 30rpx;
}



.first-cate-modal{
  width: 100%;
  height: 900rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999999;
}

.firmask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .4);
  z-index: 99999;
  transition: all .3s;
}

.hiddenFir{
  visibility: hidden;
  opacity: 0;
  transform: translateY(100%);
  transition: all .3s

}

.showFir{
  visibility: visible;
  opacity: 1;
  transform: translateY(0);
  transition: all .3s;
  
}

.first-cate-modal-header >view:nth-child(1){
  font-size: 26rpx;
  color: #323232;
}

.first-cate-modal-header{
  display: flex;
  justify-content: space-between;
  padding-left: 50rpx;
  padding-right: 100rpx;
  align-items: center;
  box-sizing: border-box;
  height: 50rpx;
  margin-top: 50rpx;
  margin-bottom: 60rpx;
}

.first-cate-modal-header input{
  width: 460rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.fircate-icon{
  width: 100%;
  display: flex;
  padding: 0 90rpx;
  box-sizing: border-box;
  flex-flow: row wrap;
  justify-content: flex-start;
  
}


.fircate-icon image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 50rpx;
  
}

.confirm{
  width: calc(100% - 150rpx);
  height: 80rpx;
  line-height: 80rpx;
  background: #62AC4B;
  text-align: center;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #fff;
  margin: 0 auto;
  margin-top: 64rpx;
}


.marRight{
  margin-right: 160rpx;
}

