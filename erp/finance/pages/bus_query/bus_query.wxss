.bus-query-box{
  background: #f6f6f6;
  height: 100vh;
}

.bus-query-header{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  color: #323232;
  text-align: center;

}

.bus-query-container1 > view,.bus-query-container2 > view{
  background: #fff;
  border-bottom: 1px solid #f7f7f7;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 88rpx;

}

.bus-query-container2 > view .pickerdate{
  width: calc(100% - 230rpx);
  height: 100%;
}

.bus-query-container1 > view view,.bus-query-container2 > view view:nth-child(1){
  font-size: 28rpx;
  color: #666;
  width: 170rpx;
}


.bus-query-container1 > view view:nth-child(2),.bus-query-container2 > view view:nth-child(2){
  font-size: 28rpx;
  color: #323232;
  width: calc(100% - 230rpx);

}

.pickerdate{
  line-height: 88rpx;
  font-size: 28rpx;
}

.bus-query-container2 {
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}

.btn-group{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn1,.btn2{
  width: calc(100% - 60rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn1{
  margin-bottom: 50rpx;
  background: #62AC4B;
  color: #fff;
}

.btn2{
  background: #fff;
  color: #424242;
}

