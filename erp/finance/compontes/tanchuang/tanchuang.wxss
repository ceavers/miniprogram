.tc_box {
  width: 100%;
  height: 100%;
  position: relative;
}

.tanchuang_box {
  width: 690rpx;
  height: 360rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16px 16px 0px 0px;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 100;
}

.tc_title {
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(50, 50, 50, 1);
}

.tc_content image {
  width: 56rpx;
  height: 56rpx;
}

.tc_content {
  display: flex;
  justify-content: space-around;
  margin-top: 46rpx;
}

.tc_text {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(50, 50, 50, 1);
  text-align: center;
}

.tc_btn {
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 88rpx;
  background: rgba(242, 242, 242, 1);
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}
