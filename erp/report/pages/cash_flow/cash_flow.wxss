/* report/pages/cash_flow/cash_flow.wxss */
.choose-box{
  margin:40rpx auto;
  margin-top:34rpx;
  display: flex;
  width: 516rpx;
}
.choose-box>view{
  width:172rpx;
  height: 72rpx;
  background: #fff;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border:1px solid rgba(199,199,204,1);
}
.curr-month{
  border-right: none!important;
  border-radius:16rpx 0px 0px 16rpx;
}
.all-year{
  border-left: none!important;
  border-radius:0px 16rpx 16rpx 0px;
}
.choose-box>.choose{
  background: #ACD1A0;
  color:#fff;
}
.little-title{
  padding: 0 30rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  margin-bottom: 24rpx;
}
.item-box{
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:28rpx;
  font-weight:500;
  color:rgba(50,50,50,1);
  background: #fff;
  border-bottom:1px solid #f6f6f6;
}
.mr-b{
  margin-bottom: 70rpx;
}
.mr-b-t{
  margin-bottom: 98rpx;
}
.total-num{
  color:#FF3B30;
}
.all-box .item-box{
  margin-bottom: 10rpx;
}
.item-content{
  display: flex;
}
.icon-return{
  font-size: 36rpx;
  color:#D9D9D9;
  margin-left: 20rpx;
}