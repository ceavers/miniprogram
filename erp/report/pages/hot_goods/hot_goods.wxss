/* report/pages/hot_goods/hot_goods.wxss */
.container{
  font-size: 28rpx;
  color: #323232;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
}
.header>view{
  width: 260rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  background: #fff;
  border: 1rpx solid #C7C7CC;
  border-radius: 16rpx;
  margin: 35rpx 0 40rpx 0;
}
.header>view:first-child{
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.header>view:last-child{
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-left: 0;
}
.header-hover{
  background: #ACD1A0 !important;
  color: #fff;
}
.box-line{
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  padding: 0 32rpx;
  margin-bottom:1px;
  display: flex;
  justify-content: space-between;
}
.box-line:last-child{
  margin: 0;
}
.icon-return{
  color: #D9D9D9;
  margin-left: 16rpx;
  width: 35rpx;
  height: 35rpx;
}