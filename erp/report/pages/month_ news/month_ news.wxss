/* report/pages/month_ news/month_ news.wxss */
.container{
  font-size: 28rpx;
  color: #323232;
}
.choice-month{
  width: 200rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 50rpx auto;
}
.choice-month>text{
  vertical-align: middle;
}
.choice-month .icon-return{
  display: inline-block;
  transform:rotate(90deg);
  margin-left: 25rpx;
  color: #62AC4B;
  vertical-align: middle;
  font-weight: bold;
  margin-top: 6rpx;
}
.ring{
  width: 100%;
  height: 310rpx;
}
.sale-Proportion{
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  margin-top: 110rpx;
}
.sale-Proportion>view:first-child{
  width: calc(100% - 75rpx);
}
.sale-Proportion>view:last-child{
  width: 75rpx;
  text-align: right;
}
.icon-return{
  color: #D9D9D9;
}
.month{
  height: 26rpx;
  line-height: 26rpx;
  padding-top:22rpx; 
  display: flex;
  justify-content:space-between;
}
.Total{
  height: 8rpx;
  margin-top: 31rpx;
  margin-left: 45rpx;
  background: #F0F0F0;
  position: relative;
}
.line{
  position: absolute;
  top: 0;
  left: 0;
  width: 1rpx;
  height:8rpx;
  background:#62AC4B;
  border-radius:4rpx; 
  animation: line 1s 1;
  animation-fill-mode: forwards;
}
.box{
  margin-top: 20rpx;
}
.box-line{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  margin-bottom: 1px;
}
.box-line:last-child{
  margin: 0;
}
.line-scale{
  font-size: 24rpx;
}
.no-data{
  text-align: center;
}
.no-img{
  width: 124rpx;
  height: 124rpx;
  margin-top: 236rpx;
}
.no-title{
  font-size: 32rpx;
  margin: 66rpx auto 28rpx auto;
}
.no-content{
  color: #999;
}
.no-btn{
  width:200rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background:rgba(98,172,75,1);
  border-radius:8rpx;
  margin: 0 auto;
  margin-top: 122rpx;
}