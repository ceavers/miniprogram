/* warehouse/components/picker/picker.wxss */
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}
.weui-mask{
  position:fixed;
  z-index:9999;
  top:0;
  right:0;
  left:0;
  bottom:0;
  background: #000;
  opacity: 0.4;
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(100%);
}
.weui-half-screen-dialog{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  z-index:999999;
  background-color:#fff;
}
.btn-box{
  height: 88rpx;
  background: #62AC4B;
  padding: 0 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cancel,.complete{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  padding: 6rpx 8rpx;
}
.picker-box{
  width: 100%;
  height: 312rpx;
}
.year{
  text-align: right;
}
.mouth{
  text-align: center;
}
.day{
  text-align: left;
}
.select-box{
  position:relative;
  height: 60rpx;
  line-height: 60rpx;
}
.content{
  font-size:30rpx;
  font-weight:bold;
}
.select{
  font-size:40rpx;
  font-weight:bold;
  color:rgba(66,66,66,1);
}
.select-box::after{
  content:'';
  height:1px;
  width:100%;
  position:absolute;
  left:0;
  top:-1000px;
}
.select-box::before{
  content:'';
  height:1px;
  width:100%;
  position:absolute;
  left:0;
  top:-1000px;
}
.option{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(199,199,199,1);
}