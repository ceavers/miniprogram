/* components/popup/popup.wxss */
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}
.weui-mask{
  position:fixed;
  z-index:1000;
  top:0;
  right:0;
  left:0;
  bottom:0;
  background: #000;
  opacity: 0.2;
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(-100%);
}
.weui-half-screen-dialog{
  position:fixed;
  left:0;
  right:0;
  top:0;
  z-index:999999;
  background-color:#fff;
  border-radius:0 0 16rpx 16rpx;
}